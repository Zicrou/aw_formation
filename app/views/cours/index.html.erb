<p id="notice"><%= notice %></p>

<h1>Cours</h1>
<%= current_user.role %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Descriptin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cours.each do |cour| %>
      <tr>
        <td><%= cour.title %></td>
        <td><%= cour.descriptin %></td>
        <td><%= link_to 'Show', cour %></td>
        <td><%= link_to 'Edit', edit_cour_path(cour) if logged_in?(:admin, :editor) %></td>
        <td><%= link_to 'Destroy', cour, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:admin, :editor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cour', new_cour_path %>
